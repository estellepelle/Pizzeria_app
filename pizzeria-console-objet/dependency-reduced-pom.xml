<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>Pizzeria-app-parent</artifactId>
    <groupId>dta</groupId>
    <version>1.0.1</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <groupId>Pizzeria-console</groupId>
  <artifactId>Pizzeria-console</artifactId>
  <build>
    <finalName>pizzeria_app_compile_${project.version}</finalName>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.0.0</version>
        <executions>
          <execution>
            <goals>
              <goal>shade</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <version>3.0.2</version>
        <configuration>
          <archive>
            <manifest>
              <mainClass>fr.pizzeria.console.PizzeriaAdminConsoleApp</mainClass>
            </manifest>
          </archive>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>dev</id>
      <dependencies>
        <dependency>
          <groupId>Pizzeria-memoire</groupId>
          <artifactId>Pizzeria-memoire</artifactId>
          <scope>runtime</scope>
        </dependency>
      </dependencies>
      <properties>
        <dao>fr.pizzeria.dao.DaoMemoireFactory</dao>
      </properties>
    </profile>
    <profile>
      <id>prod</id>
      <dependencies>
        <dependency>
          <groupId>Pizzeria-fichier</groupId>
          <artifactId>Pizzeria-fichier</artifactId>
          <scope>runtime</scope>
        </dependency>
      </dependencies>
      <properties>
        <dao>fr.pizzeria.dao.DaoFichierFactory</dao>
      </properties>
    </profile>
    <profile>
      <id>jdbc</id>
      <dependencies>
        <dependency>
          <groupId>Pizzeria-dao-jdbc</groupId>
          <artifactId>Pizzeria-dao-jdbc</artifactId>
          <version>1.0.1</version>
          <scope>runtime</scope>
        </dependency>
      </dependencies>
      <properties>
        <dao>fr.pizzeria.dao.JdbcFactory</dao>
      </properties>
    </profile>
  </profiles>
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.12</version>
      <scope>test</scope>
      <exclusions>
        <exclusion>
          <artifactId>hamcrest-core</artifactId>
          <groupId>org.hamcrest</groupId>
        </exclusion>
      </exclusions>
    </dependency>
  </dependencies>
</project>

